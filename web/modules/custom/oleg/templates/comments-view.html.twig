{#
/**
 * @file
 * Default template for the page of the Guest book module.
 * Available variables:

 * - content: List of all the field items. Each row contains:
 *   - user_name: Name of the user who added a comment.
 *   - user_email: Email of the user who added a comment.
 *   - user_phone: Telephone number of the user who added a comment.
 *   - user_avatar: Avatar of the user who added a comment.
 *   - user_message: Message left by the user.
 *   - user_image: The image that is attached to the User's Message.
 *
 * @ingroup templates
 *
 */
#}

{{ attach_library('oleg/guest_book_page') }}

<h1 class="comments-page__title">Comments</h1>

        <div class="comments__item">
            <div{{ attributes }}>
                {{ title_suffix }}
            <div class="comments__item-inner">
                <div class="user-info">
                    <h3 class="comments__user-name">{{ content.user_name }}</h3>
                    <div class="comments__user-avatar"> {{ content.user_avatar }} </div>
                    <div class="comments__time-created">{{ content.created }}</div>
                </div>
                <div class="user-message">
                    <blockquote class="comments__user-message">{{ content.user_message }}</blockquote>
                    <div class="comments__user-image">{{ content.user_image }}</div>
                </div>
            </div>

            {# User contacts #}
            <div class="comments__user-contacts">
                <div class="user__email">
                    <h4 class="user__email-title">{{ 'Email:'|t }}</h4>
                    {{ content.user_email }}
                </div>
                <div class="user__phone">
                    <h4 class="user__phone-title">{{ 'Phone:'|t }}</h4>
                    <a class="user__phone-link" href="tel:{{ content.user_phone[0] }}">{{ content.user_phone[0] }}</a>
                </div>
            </div>
            </div>
        </div>

















